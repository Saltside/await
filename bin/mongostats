#!/usr/bin/env python2
import argparse
import pymongo


def main(args):
    client = pymongo.MongoClient(
        args.uri,
        serverSelectionTimeoutMS=args.timeout)

    print(client.server_info())


if __name__ == "__main__":
    parser = argparse.ArgumentParser(description="Get mongo server info.")

    parser.add_argument("uri", nargs="?")
    parser.add_argument("-t", "--timeout", type=int, nargs=1, default=1000)

    args = parser.parse_args()
    main(args)
